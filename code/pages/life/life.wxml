<!--life.wxml-->
<view class="container">
  <view>
    <text class="user-motto">Life</text>
  </view>
  <checkbox-group bindchange="checkboxChange" style="float:none;width:100%;flex-direction:column;zoom:1;overflow:hidden;">
    <view wx:for="{{compulsory}}" style="float:left;background:#eeeeee;width:33%">
      <view>
        <view>
          <image style="width: 50px; height: 50px; background-color: #eeeeee;" src="{{item.image}} "></image>
        </view>
        <view>
          <checkbox value="{{item.score}} " checked="{{item.checked}}" />{{item.name}}
        </view>
      </view>
    </view>
  </checkbox-group>
</view>